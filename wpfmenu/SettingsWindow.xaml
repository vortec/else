<Window x:Name="Settings" x:Class="wpfmenu.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Options" Width="540" Height="400">
    <Grid>
        <Image x:Name="testImage" HorizontalAlignment="Left" Height="32" Margin="108,35,0,0" VerticalAlignment="Top" Width="32" Source="tray.ico"/>
        
        <Grid Height="40" Background="#33336699">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Image Width="32"  Height="32" Grid.Column="0" x:Name="icon" Source="{Binding Icon}" />
            <StackPanel Grid.Column="1" >
                <TextBlock FontSize="17" Margin="0" FontWeight="500">iPhoto</TextBlock>
                <TextBlock FontSize="10" Margin="0" Foreground="#FFA1A0A2">/Applicatons/iPhoto.app</TextBlock>
            </StackPanel>
        </Grid>

    </Grid>
</Window>
