<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush Color="#FFF8F8F8" x:Key="BackgroundBrush" />
    <SolidColorBrush Color="#7F363636" x:Key="AlphaBackgroundBrush" />
    <SolidColorBrush Color="#FFD1D1D1" x:Key="TextBoxBackgroundBrush" />
    <SolidColorBrush Color="White" x:Key="WindowBackgroundBrush" />
    
    <Style TargetType="TextBox" x:Key="QueryInput">
        <Setter Property="Height" Value="48" />
        <Setter Property="FontSize" Value="24" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Padding" Value="6,3" />
        <Setter Property="FontFamily" Value="Segoe WP Semibold" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Background" Value="{StaticResource TextBoxBackgroundBrush}" />
    </Style>
    
    <Style TargetType="Border" x:Key="WindowBorder">
        <Setter Property="BorderBrush" Value="{StaticResource AlphaBackgroundBrush}" />
        <Setter Property="BorderThickness" Value="8" />
        <Setter Property="CornerRadius" Value="3" />
        <Setter Property="Background" Value="{StaticResource AlphaBackgroundBrush}" />
    </Style>
    
    <Style TargetType="Border" x:Key="ContainerBorder">
        <Setter Property="CornerRadius" Value="3" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="BorderBrush" Value="{StaticResource WindowBackgroundBrush}" />
    </Style>
    
    <Style TargetType="Grid" x:Key="Container">
        <Setter Property="Background" Value="{StaticResource WindowBackgroundBrush}" />
    </Style>
    
</ResourceDictionary> 