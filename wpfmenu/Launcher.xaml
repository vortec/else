<Window x:Name="Launcher" x:Class="wpfmenu.LauncherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="clr-namespace:wpfmenu"
        
        Title="MainWindow" Height="350" Width="555" WindowStyle="None" ResizeMode="NoResize" ShowInTaskbar="True" WindowStartupLocation="CenterScreen" BorderThickness="6" SnapsToDevicePixels="True" UseLayoutRounding="False" Deactivated="onDeactivated" LostFocus="onLostFocus" Activated="onActivated" BorderBrush="#FF363636">
    <Window.Resources>
        <Style TargetType="Grid" x:Key="focusedResult">
            <Setter Property="Background" Value="#ff336699" />
        </Style>
        
        
    </Window.Resources>
    <!--<Window.Effect>
        <DropShadowEffect/>
    </Window.Effect>-->
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" Name="QueryInput" Text="TextBox" FontSize="24" KeyDown="query_onKeyDown" VerticalAlignment="Top" Padding="6,3" FontFamily="Segoe WP Semibold"/>
        <Controls:ResultsList Grid.Row="1" x:Name="testResultsList" Margin="0,10" />
    </Grid>
</Window>
 