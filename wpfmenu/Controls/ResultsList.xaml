<UserControl x:Class="wpfmenu.Controls.ResultsList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Converter="clr-namespace:wpfmenu.Converter"
             x:Name="Root"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             Focusable="False">
    <UserControl.Resources>
        <Converter:EqualsConverter x:Key="EqualsConverter"/>
    </UserControl.Resources>
    
    <ItemsControl x:Name="itemscontrol" ItemsSource="{Binding Items}">
        <ItemsControl.Style>
            <Style TargetType="Control">
                <Setter Property="Focusable" Value="False" />
            </Style>
        </ItemsControl.Style>
        <ItemsControl.Template>
            <ControlTemplate>
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="{TemplateBinding Padding}">
                    <ItemsPresenter />
                </ScrollViewer>
            </ControlTemplate>
        </ItemsControl.Template>
        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <Grid Margin="0 2 0 0" x:Name="__GRID" RenderOptions.ClearTypeHint="Enabled" Background="White">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Image Width="32"  Height="32" Grid.Column="0" x:Name="icon" Source="{Binding Icon}"/>
                    <StackPanel Grid.Column="1" x:Name="TitleContainer">
                        <TextBlock FontSize="17" Margin="0" Text="{Binding Title}"  x:Name="Title" />
                        <TextBlock FontSize="10" Margin="0" Foreground="#FF777777" Text="{Binding SubTitle}" x:Name="SubTitle" />
                    </StackPanel>
                </Grid>
                <DataTemplate.Triggers>
                    <DataTrigger Value="True">
                        <DataTrigger.Binding>
                            <MultiBinding Converter="{StaticResource EqualsConverter}">
                                <Binding ElementName="Root" Path="SelectedIndex" />
                                <Binding Path="Index" />
                            </MultiBinding>
                        </DataTrigger.Binding>
                        <Setter TargetName="__GRID" Property="Background" Value="#FFdfdfdf" />
                    </DataTrigger>
                    <!-- if Subtitle is not provided, make the Title consume available space and center vertically. -->
                    <DataTrigger Binding="{Binding Path=IsSingular}" Value="True">
                        <Setter TargetName="SubTitle" Property="Visibility" Value="Collapsed" />
                        <Setter TargetName="TitleContainer" Property="VerticalAlignment" Value="Center" />
                    </DataTrigger>
                </DataTemplate.Triggers>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>
</UserControl>
