<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <!-- 
  See https://github.com/nlog/nlog/wiki/Configuration-file 
  for information on customizing logging rules and outputs.
   -->
  
  <targets>
<!--    Log to file-->
    <target 
      xsi:type="File" name="logfile"  fileName="${basedir}/logs/else.log" layout="${longdate} ${uppercase:${level}} ${message} \n${exception:format=tostring}" />
<!--    Log to visual studio Output window-->
    <target xsi:type="Debugger" name="debugger" layout="${message} \n${exception:format=tostring}"/>
  </targets>
  
  <rules>
    <logger name="*" minlevel="Trace" writeTo="logfile" />
    <logger name="*" minlevel="Trace" writeTo="debugger" />
  </rules>
  
</nlog>